<UserControl
    x:Class="TileShop.UI.Views.AssociatePaletteView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="using:TileShop.UI.ViewModels"
    x:CompileBindings="True"
    x:DataType="vm:AssociatePaletteViewModel">
    <Border Padding="10">
        <Grid RowDefinitions="auto,*">
            <TextBlock Grid.Row="0" Margin="5,0,0,0" Text="Palettes" />

            <ListBox Grid.Row="1" Items="{Binding Palettes}" SelectedItem="{Binding SelectedPalette}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" />
                            <TextBlock Margin="20,0,0,0" Text="{Binding PaletteKey}" />
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
                <ListBox.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel />
                    </ItemsPanelTemplate>
                </ListBox.ItemsPanel>
            </ListBox>
        </Grid>
    </Border>
</UserControl>
