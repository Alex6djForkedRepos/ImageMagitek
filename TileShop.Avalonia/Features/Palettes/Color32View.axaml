<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:vm="using:TileShop.AvaloniaUI.ViewModels"
			 xmlns:v="using:TileShop.AvaloniaUI.Views"
			 x:DataType="vm:Color32ViewModel"
			 x:CompileBindings="True"
             x:Class="TileShop.AvaloniaUI.Views.Color32View">
	<Grid RowDefinitions="auto,auto,auto,auto">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" MinWidth="300" />
			<ColumnDefinition Width="auto" MinWidth="25" />
			<ColumnDefinition Width="auto" />
		</Grid.ColumnDefinitions>
		<StackPanel
            Grid.Row="0"
            Grid.RowSpan="4"
            Grid.Column="0">

			<Button
                Height="50"
                Margin="0,10,10,10"
				Command="{ReflectionBinding DataContext.SaveActiveColorCommand, RelativeSource={RelativeSource AncestorType={x:Type v:PaletteEditorView}}}"
                IsEnabled="{Binding CanSaveColor}">
				<StackPanel>
					<TextBlock HorizontalAlignment="Center" Text="Assign" />
					<TextBlock HorizontalAlignment="Center" Text="Color" />
				</StackPanel>
			</Button>

			<Border
                Margin="0,0,10,0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                BorderBrush="Black"
                BorderThickness="2">

				<Rectangle Width="55" Height="55">
					<Rectangle.Fill>
						<SolidColorBrush Color="{Binding Color}" />
					</Rectangle.Fill>
				</Rectangle>
			</Border>
		</StackPanel>

		<!--  RGBA Sliders  -->
		<Slider
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,0,10,5"
            Foreground="Red"
            Maximum="{Binding RedMax}"
            Minimum="0"
            Value="{Binding Red, Mode=TwoWay}" />

		<Slider
            Grid.Row="1"
            Grid.Column="1"
            Margin="10,0,10,5"
            Foreground="Green"
            Maximum="{Binding GreenMax}"
            Minimum="0"
            Value="{Binding Green, Mode=TwoWay}" />

		<Slider
            Grid.Row="2"
            Grid.Column="1"
            Margin="10,0,10,5"
            Foreground="Blue"
            Maximum="{Binding BlueMax}"
            Minimum="0"
            Value="{Binding Blue, Mode=TwoWay}" />

		<Slider
            Grid.Row="3"
            Grid.Column="1"
            Margin="10,0,10,0"
            Foreground="{StaticResource CheckeredBrush}"
            Maximum="{Binding AlphaMax}"
            Minimum="0"
            Value="{Binding Alpha, Mode=TwoWay}" />

		<!--  RGBA Numeric Values  -->
		<TextBlock
            Grid.Row="0"
            Grid.Column="2"
            VerticalAlignment="Center"
            Text="{Binding Red}" />
		<TextBlock
            Grid.Row="1"
            Grid.Column="2"
            VerticalAlignment="Center"
            Text="{Binding Green}" />
		<TextBlock
            Grid.Row="2"
            Grid.Column="2"
            VerticalAlignment="Center"
            Text="{Binding Blue}" />
		<TextBlock
            Grid.Row="3"
            Grid.Column="2"
            VerticalAlignment="Center"
            Text="{Binding Alpha}" />
	</Grid>
</UserControl>
