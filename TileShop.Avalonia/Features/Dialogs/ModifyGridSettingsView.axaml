<UserControl
    x:Class="TileShop.AvaloniaUI.Views.ModifyGridSettingsView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fac="using:FluentAvalonia.UI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TileShop.AvaloniaUI.ViewModels"
    Width="400"
    Height="350"
    MinWidth="230"
    x:CompileBindings="True"
    x:DataType="vm:ModifyGridSettingsViewModel"
    mc:Ignorable="d">
    <Grid
        Margin="10"
        ColumnDefinitions="*,*"
        RowDefinitions="auto,auto,auto">
        <TextBox Text="{Binding ShiftX}" />
        <TextBox Grid.Column="1" Text="{Binding ShiftY}" />

        <TextBox Grid.Row="1" Text="{Binding WidthSpacing}" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Text="{Binding HeightSpacing}" />

        <StackPanel
            Grid.Row="2"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <fac:ColorPickerButton ShowAcceptDismissButtons="False" Color="{Binding PrimaryColor}" />
            <fac:ColorPickerButton ShowAcceptDismissButtons="False" Color="{Binding SecondaryColor}" />
            <fac:ColorPickerButton ShowAcceptDismissButtons="False" Color="{Binding LineColor}" />
        </StackPanel>
    </Grid>
</UserControl>
