<UserControl
    x:Class="TileShop.AvaloniaUI.Views.StatusView"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:TileShop.AvaloniaUI.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    x:CompileBindings="True"
    x:DataType="vm:StatusViewModel"
    mc:Ignorable="d">
    <Grid>
        <DockPanel Margin="8,0,8,0">
            <TextBlock DockPanel.Dock="Left" Text="{Binding Editors.ActiveEditor.ActivityMessage}" />
            <TextBlock DockPanel.Dock="Right" Text="{Binding Editors.ActiveEditor.PendingOperationMessage}" />

            <TextBlock Text="{Binding ActivityMessage, TargetNullValue=' '}" />
