<Application
    x:Class="TileShop.AvaloniaUI.App"
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:con="using:TileShop.AvaloniaUI.Converters"
    xmlns:fas="using:FluentAvalonia.Styling"
    xmlns:local="using:TileShop.AvaloniaUI"
    RequestedThemeVariant="Dark">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme />
        <fas:FluentAvaloniaTheme PreferUserAccentColor="True" />
        <StyleInclude Source="avares://Dock.Avalonia/Themes/DockFluentTheme.axaml" />

        <StyleInclude Source="avares://TileShop.AvaloniaUI/Styles/VerticalNumericUpDown.axaml" />
        <StyleInclude Source="avares://TileShop.AvaloniaUI/Styles/RadioButtonTool.axaml" />
        <StyleInclude Source="avares://TileShop.AvaloniaUI/Styles/Arranger.axaml" />
        <StyleInclude Source="avares://TileShop.AvaloniaUI/Styles/TileShop.General.axaml" />
    </Application.Styles>
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.ThemeDictionaries>
                <ResourceInclude x:Key="Default" Source="avares://TileShop.AvaloniaUI/Styles/TileShop.Light.axaml" />
                <ResourceInclude x:Key="Dark" Source="avares://TileShop.AvaloniaUI/Styles/TileShop.Dark.axaml" />
            </ResourceDictionary.ThemeDictionaries>
            <ResourceDictionary.MergedDictionaries>
                <ResourceInclude Source="avares://TileShop.AvaloniaUI/Styles/Icons.axaml" />
                <ResourceInclude Source="avares://TileShop.AvaloniaUI/Styles/ResourceOverrides.axaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

